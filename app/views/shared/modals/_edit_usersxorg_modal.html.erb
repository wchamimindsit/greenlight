<div class="modal fade" id="editOrganizationModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="card-body p-6">
          <div class="card-title">
            <h3 class="update-only"><%= t("modal.update_user_by_organization.title") %></h3>
          </div>

          <%= form_for(:usersbyorganization, url: admin_set_users_uxorg_path) do |f| %>
          <div class="mb-2">
            
            <%= f.hidden_field :user_uid, required: true %>
            <%= f.hidden_field :organization, required: true %>

            <div class="organization">
              <select class="selectpicker" style="min-width: 100% !important;" title="<%= t("modal.update_user_by_organization.select") %>" data-live-search="true" data-virtual-scroll="true" >
                <% Organization.order(:name).each do |objOrganization| %>
                  <option value="<%= objOrganization.id %>"><%= objOrganization.name %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="mt-4">
              <%= f.submit t("modal.update_user_by_organization.update"), class: "update-only btn btn-primary btn-block" %>
          </div>
          <% end %>
        </div>
        <div class="card-footer">
          <p><%= t("modal.create_organization.footer_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
