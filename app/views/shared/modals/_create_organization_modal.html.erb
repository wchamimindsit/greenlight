<div class="modal fade" id="createOrganizationModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="card-body p-6">
          <div class="card-title">
            <h3 class="create-only"><%= t("modal.create_organization.title") %></h3>
            <h3 class="update-only"><%= t("modal.update_organization.title") %></h3>
          </div>

          <%= form_for(:organization, url: admin_new_organization_path) do |f| %>

            <div class="input-icon mb-2">
              <span class="input-icon-addon">
                <i class="fas fa-briefcase"></i>
              </span>
              <%= f.text_field :name, id: "createOrganizationName", class: "form-control text-center", placeholder: ['* ', t("modal.create_organization.name_placeholder")].join, autocomplete: :off, required: true %>
              <div class="invalid-feedback text-left"><%= t("modal.create_organization.not_blank") %></div>
            </div>
            <div class="mb-2">
              <%= f.text_field :address, id: "createOrganizationAddress", class: "form-control text-center", placeholder: t("modal.create_organization.address_placeholder"), autocomplete: :off %>
            </div>
            <div class="mb-2">
              <%= f.text_field :phone, id: "createOrganizationPhone", type: "number", class: "form-control text-center", placeholder: t("modal.create_organization.phone_placeholder"), autocomplete: :off %>
            </div>
            <div class="mb-2">
              <%= f.text_field :email, id: "createOrganizationEmail", class: "form-control text-center", placeholder: t("modal.create_organization.email_placeholder"), autocomplete: :off %>
            </div>
            <div class="mb-2">
              <%= f.text_field :maxusers, id: "createOrganizationMaxusers", type: "number", class: "form-control text-center", placeholder: ['* ', t("modal.create_organization.maxusers_placeholder")].join, autocomplete: :off, required: true %>
            </div>
            <div class="mb-2">
              <%= f.text_field :nextinvoice, id: "createOrganizationNextinvoice", class: "form-control text-center", placeholder: ['* ', t("modal.create_organization.nextinvoice_placeholder")].join, autocomplete: :off, required: true %>
            </div>
            <div class="mb-2">
              <label class="custom-switch pl-0 mt-3 mb-3 w-100 text-left d-inline-block">
                <span class="ml-0 custom-switch-description"><%= t("modal.create_organization.email_verified_placeholder")%></span>
                <%= f.check_box :email_verified, id: "createOrganizationEmailVerified", class: "custom-switch-input" %>
                <span class="custom-switch-indicator float-right"></span>
              </label>
            </div>

            <div class="mt-4">
                <%= f.submit t("modal.create_organization.create"), class: "create-only btn btn-primary btn-block" %>
                <%= f.submit t("modal.update_organization.update"), class: "update-only btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <p><%= t("modal.create_organization.footer_text") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
